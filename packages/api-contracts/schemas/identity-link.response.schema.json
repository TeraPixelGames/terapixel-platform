{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://terapixel.dev/contracts/identity-link.response.schema.json",
  "title": "IdentityLinkResponse",
  "type": "object",
  "required": ["request_id", "merged", "global_player_id", "players"],
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1
    },
    "merged": {
      "type": "boolean"
    },
    "global_player_id": {
      "type": "string"
    },
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "player_id",
          "game_id",
          "nakama_user_id",
          "global_player_id"
        ],
        "properties": {
          "player_id": {
            "type": "string",
            "minLength": 1
          },
          "game_id": {
            "type": "string",
            "minLength": 1
          },
          "nakama_user_id": {
            "type": "string",
            "minLength": 1
          },
          "global_player_id": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
